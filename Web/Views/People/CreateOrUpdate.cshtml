@model Web.Models.People
@{
   ViewData["Title"] = "CreateOrUpdate";
}
<h1>Cadastro</h1>
<h4>People</h4>
<hr />
<div class="row">
   <div class="col-md-4">
      <form asp-action="@(Model != null && Model?.Id > 0 ? "Edit":"Create")">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         @if (Model != null && Model?.Id > 0)
         {
            <input type="hidden" asp-for="Id" />
         }
         <div class="form-group mb-2">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
         </div>
         <div class="form-group mb-2">
            <label asp-for="CreatedAt" class="control-label"></label>
            <input asp-for="CreatedAt" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control" />
            <span asp-validation-for="CreatedAt" class="text-danger"></span>
         </div>
         <div class="form-group mb-2">
            <label asp-for="Salary" class="control-label"></label>
            <input asp-for="Salary" type="text" asp-format="{0:N2}" class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
         </div>
         <div class="form-group form-check mb-2">
            <label class="form-check-label">
               <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
            </label>
         </div>
         <div class="form-group mb-2">
            <label asp-for="Observation" class="control-label"></label>
            <input asp-for="Observation" class="form-control" />
            <span asp-validation-for="Observation" class="text-danger"></span>
         </div>
         <div class="form-group mt-2 mb-2">
            <input type="submit" value="@(Model != null && Model?.Id > 0 ? "Alterar": "Cadastrar")" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Voltar a lista</a>
         </div>
      </form>
   </div>
</div>
@section Scripts {
   @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
   }
   <script>
      $(document).ready(function(){
         $("#CreatedAt").inputmask("99/99/9999");
         $("#Salary").maskMoney({ thousands: '.', decimal: ',', allowZero: true, showSymbol: false, symbol: '' }).maskMoney('mask');
      });
   </script>
}
